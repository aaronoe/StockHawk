<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bbDEDFDE"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/widget_layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaDEDFDE"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/widget_margin"
        android:paddingTop="@dimen/widget_margin"
        android:paddingEnd="@dimen/widget_margin"
        android:paddingStart="@dimen/widget_margin">
        <ImageView
            android:contentDescription="@string/stock_hawk_logo"
            android:id="@+id/widget_img_launcher"
            android:layout_width="@dimen/widget_logo"
            android:layout_height="@dimen/widget_logo"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_title"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:paddingStart="@dimen/widget_header_padding"
            android:paddingEnd="@dimen/widget_header_padding" />
    </LinearLayout>
    <ListView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
